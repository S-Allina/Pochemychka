@model IEnumerable<Pochemychka.Models.Test>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/Card.css" asp-append-version="true" />
</head>
<h1>Тесты</h1>
<div class="headerContainer">
    <form asp-controller="Tests" class="search" asp-action="Index" class="search">
        <div class="fieldIdentity">
            <input required name="TextSearch" placeholder="Поиск..." type="search" class="input">
            <span class="span"></span>
        </div>
        <div class="nav__auto">
            <button type="submit" class="button">
                Фильтр
            </button>
           
                <button type="button" class="button">
                <a asp-action="Index"  > Отмена </a>
                </button>
          
        </div>
    </form>
      @if(User.IsInRole("admin"))
       {
        <a asp-action="Create" style="width: 200px;" class="button">Добавить</a>
   
        }
         </div>


<div class="containerCards">

    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <a asp-controller="Questions" asp-action="Index" asp-route-idT="@item.IdTest">

                <div class="card">
                    <div class="pricing-block-content">
                        <p class="pricing-plan">@item.NameTest</p>
                        @if (User.IsInRole("admin"))
                        {
                            <div style="display:flex">
                                <a asp-action="Edit" asp-route-idT="@item.IdTest"><img class="TestOptionButton" src="~/img/EditIcon.png"/></a>
                                <a asp-action="Delete" asp-route-id="@item.IdTest"><img class=" TestOptionButton" src="~/img/deleteIcon.png" /></a>
                            </div>
                        }
                    </div>
                </div>
            </a>

        }
    }
    else
    {
        <h1>Тесты пока не добавлены</h1>
    }
</div>


