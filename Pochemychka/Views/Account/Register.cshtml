@model Pochemychka.ViewModels.LoginAndRegisterModel
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/Form.css" asp-append-version="true" />
</head>

<div class="containerForm">
    <div class="heading">Регистрация</div>
    <form class="form" asp-action="Register">
        <input class="input" placeholder="Имя" asp-for="FirstName">
        <span asp-validation-for="FirstName"></span>
        <input class="input" placeholder="Фамилия" asp-for="LastName">
        <span asp-validation-for="LastName"></span>
        <input class="input" asp-for="Email" placeholder="Email" type="email">
        <span asp-validation-for="Email"></span>
        <input class="input" asp-for="Name" placeholder="логин" type="text">
        <span asp-validation-for="Name"></span>
        <input class="input" asp-for="Password" placeholder="пароль" type="password">
        <span asp-validation-for="Password"></span>
        <input placeholder="Повторите пароль" id="password" asp-for="PasswordConfirm" type="password" class="input" required="" />
        <span asp-validation-for="PasswordConfirm"></span>
                                    <div asp-validation-summary="All" class="text-danger"></div>

        <input value="Зарегистрироваться" type="submit" class="login-button" />
    </form>
    <div class="social-account-container">
    </div>
    <span class="agreement">Уже есть аккаунт? <a asp-action="Login">Вход</a></span>
</div>
